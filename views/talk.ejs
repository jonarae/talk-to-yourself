<%- include('partials/header.ejs') %>

<main role="main" class="inner cover">
  <h1>Go ahead, talk to yourself.</h1>
  <form class="" action="/talk" method="post">
    <div class="form-group">
      <input type="text" class="form-control" name="title" placeholder="What about?" autocomplete="off">
    </div>

    <div class="form-group">
      <textarea class="form-control" name="content" rows="8" cols="80" placeholder="OK! What about it?"></textarea>
    </div>

    <button type="submit" class="btn btn-secondary" name="button">Done Talking</button>
  </form>
</main>

