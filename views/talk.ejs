<%- include('partials/header.ejs') %>

<main role="main" class="inner cover">
  <h1>Go ahead, talk to yourself.</h1>
  <form action="/talk" method="post">
    <div class="form-group">
      <input type="text" class="form-control" name="title" placeholder="What do you want to talk about?" autocomplete="off">
    </div>

    <div class="form-group">
      <textarea class="form-control" name="content" rows="8" cols="80" placeholder="OK! What about it?"></textarea>
    </div>

    <% if (isLoggedIn) { %>
    <button type="submit" class="btn btn-secondary" name="button" value="donetalking">
      <% } else { %>
      <button type="button" class="btn btn-secondary" name="button" data-toggle="modal" data-target="#signupModal">
        <% } %>
        Done Talking
      </button>

  </form>

</main>

<%- include('partials/footer.ejs') %>
