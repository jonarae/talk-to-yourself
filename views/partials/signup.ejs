<div class="modal fade" id="signupModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Keep track of your self-talks</h5>
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>


      <form action="/signup" method="post">
        <div class="modal-body">

          <input type="hidden" name="title">
          <input type="hidden" name="content">

          <div class="form-group">
            <label for="username" class="col-form-label">Username</label>
            <input type="email" class="form-control" name="username" placeholder="Your email here">
          </div>
          <div class="form-group">
            <label for="password" class="col-form-label">Password</label>
            <input type="password" class="form-control" name="password" placeholder="Password">
          </div>

        </div>

        <div class="modal-footer">
          <button type="submit" name="button" value="signup" class="btn btn-secondary btn-block">Sign up</button>
        </div>

        <div class="modal-footer">
          <p class="text-muted">Already have an account? <a href="#" class="text-dark" data-dismiss="modal" data-toggle="modal" data-target="#loginModal">Login</a></p>
        </div>

      </form>
    </div>

  </div>
</div>
